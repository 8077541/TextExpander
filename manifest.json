{
    "manifest_version": 3,
    "name": "TextExpander FX",
    "version": "2.0",
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end",
        "all_frames": true
      }
    ],
    "icons": {
      "48": "icons/icon48.png"
   },
    "permissions": [ "storage", "clipboardRead", "clipboardWrite", "offscreen", "scripting", "activeTab" ],
    "action": {
        "default_popup": "popup.html"
      }
    
}